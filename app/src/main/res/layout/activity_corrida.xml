<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.CorridaActivity">

    <include android:layout_width="match_parent" android:layout_height="match_parent"
             layout="@layout/content_map"/>
    <Button
            android:text="@string/accept"
            android:layout_gravity="bottom"
            android:layout_height="60dp"
            android:layout_width="match_parent" android:id="@+id/btnAceitar"
            app:backgroundTint="@color/colorPrimaryDark"
            style="@style/botaoPadrao"
    />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabRota"
            android:visibility="gone"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="66dp"
            android:layout_marginEnd="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="#FF9800"
            app:srcCompat="@drawable/rota"
            app:fabSize="normal"
            tools:visibility="visible"
            android:contentDescription="@string/routers"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>